<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@drawable/custom_box_input"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/imgavt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:background="#2196F3"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/imgavata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_person_24" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUserNameComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/imgavt"
        android:text="Username"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvTimeComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgavt"
        android:layout_marginLeft="15dp"
        android:text="time"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tvContentCommment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTimeComment"
        android:layout_marginLeft="15dp"
        android:text="your comment"
        android:textSize="12dp" />


</RelativeLayout>